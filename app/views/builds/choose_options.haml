= form_tag update_options_build_url(@build), method: :patch do
  - @build.device.options.each do |option|
    = label_tag option.label
    - if option.data_type == 'enum'
      = select_tag("build[#{option.label}]", options_for_select(option.possible_values.split(",")))
    - elsif option.data_type == 'bool'
      = select_tag("build[#{option.label}]", options_for_select([['Yes', true], ['No', false]]))

  = submit_tag
