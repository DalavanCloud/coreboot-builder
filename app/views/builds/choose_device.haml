= form_for @build, url: update_device_build_url(@build) do |f|
  .row
    .col.s12.input-field
      %input#device-vendor{:type => "text"}
      %label{:for => "device-vendor"} Choose the vendor of your device

  .row
    .col.s12.input-field
      = text_field_tag :device_name, nil, id: 'device-model', disabled: true
      = f.hidden_field :device_id
      %label{:for => "device-model"} Choose the model of your device

  .row
    .col.s12
      = render 'frontend/back_button' do
        = image_tag 'back-arrow.svg', class: 'back-arrow'
        back

      = render 'frontend/next_button' do
        next